@using Laboratorium3.Models
@model List<Post>

<div class="container">
    <h1 class="display-4 text-white">Lista postów</h1>
    <div class="mb-3">
        <a class="btn btn-primary" asp-controller="Post" asp-action="Create">Utwórz post</a>
        <a class="btn btn-primary" asp-controller="Post" asp-action="CreateApi">Utwórz post Api</a>
        <a class="btn btn-info" asp-area="" asp-controller="Post" asp-action="PagedIndex">Strona z numeracją</a>
    </div>

    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-white tw">@Html.DisplayNameFor(model => model[0].Content)</th>
                    <th class="text-white tw">@Html.DisplayNameFor(model => model[0].Author)</th>
                    <th class="text-white tw">@Html.DisplayNameFor(model => model[0].Tags)</th>
                    <th class="text-white tw">@Html.DisplayNameFor(model => model[0].Comment)</th>
                    <th class="text-white tw">@Html.DisplayNameFor(model => model[0].PublicationDate)</th>
                    <th class="text-white tw">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-white tw">@item.Content</td>
                        <td class="text-white tw">@item.Author</td>
                        <td class="text-white tw">@item.Tags.GetDisplayName()</td>
                        <td class="text-white tw">@item.Comment</td>
                        <td class="text-white tw">@item.PublicationDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-white tw">
                            <a class="btn btn-outline-primary" asp-controller="Post" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                            <a class="btn btn-outline-info" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a class="btn btn-outline-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-white">Brak dostępnych postów.</p>
    }
</div>
